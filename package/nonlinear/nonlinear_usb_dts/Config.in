          Pulls the DTS files from our git repository and compiles them. Deploys the files under BINARIES_DIR

	  http://www.nonlinear-labs.de/

if BR2_PACKAGE_NONLINEAR_USB_DTS

config BR2_PACKAGE_NONLINEAR_USB_DTS_REPOSITORY
        string "git repository that holds the dts files"
        default "git@github.com:nonlinear-labs-dev/dts.git"

config BR2_PACKAGE_NONLINEAR_USB_DTS_VERSION
        string "version or branch to check out from the git repository"
        default "master"

